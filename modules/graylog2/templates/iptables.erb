<% @iptables_hosts.each do |host| %>
iptables -A INPUT -i eth0 -p udp --dport 514 -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 3000 -m state --state NEW,ESTABLISHED -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 5672 -m state --state NEW,ESTABLISHED -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 9200 -m state --state NEW,ESTABLISHED -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 12201 -m state --state NEW,ESTABLISHED -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 27017 -m state --state NEW,ESTABLISHED -j ACCEPT -s <%= host %>
<% end %>
