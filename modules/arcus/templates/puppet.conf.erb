[main]
  pluginsync = true
  reports = store, http

[master]
  allow_duplicate_certs = True
  node_name = facter
  reporturl = <%= @puppet_dashboard_url %>/reports/upload
  facts_terminus = yaml
  node_terminus = exec
  external_nodes = /usr/bin/env ARCUS_API_URL=<%= @arcus_api_url %> /opt/arcus/external_node
  modulepath = /opt/arcus/modules:/etc/puppet/modules

[agent]
  node_name_fact = fqdn
  runinterval = 300
