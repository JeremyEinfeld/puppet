# Redis configuration file
daemonize no
pidfile /var/run/redis.pid
bind <%= @listen_host %>
port <%= @port %>
timeout <%= @timeout %>
# verbose for more ; debug for all
loglevel <%= @log_level %>
logfile <%= @log_dir %>/redis.log
databases <%= @databases %>
save 900 1
save 300 10
save 60 10000
rdbcompression yes
dbfilename dump.rdb
dir <%= @data_dir %>
slave-serve-stale-data yes
<% if @password != 'nil' %>requirepass <%= @password %><% end %>
appendonly no
slowlog-log-slower-than 10000
slowlog-max-len 128
list-max-ziplist-entries 512
list-max-ziplist-value 64
set-max-intset-entries 512
zset-max-ziplist-entries 128
zset-max-ziplist-value 64
activerehashing yes
