<% @iptables_hosts.each do |host| %>
iptables -A INPUT -i eth0 -p tcp --dport 27017 -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth0 -p tcp --dport 28017 -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth1 -p tcp --dport 27017 -j ACCEPT -s <%= host %>
iptables -A INPUT -i eth1 -p tcp --dport 28017 -j ACCEPT -s <%= host %>
<% end %>
